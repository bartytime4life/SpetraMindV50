#!/usr/bin/env python3
import sys

from wrapper_base import find_repo_root, wrapper_main

if __name__ == "__main__":
    root = find_repo_root()
    module_candidates = [("-m", ["selftest"]), ("-m", ["spectramind.tools.selftest"])]
    file_candidates = [
        root / "selftest.py",
        root / "tools" / "selftest.py",
        root / "src" / "spectramind" / "tools" / "selftest.py",
    ]
    sys.exit(wrapper_main("selftest_v50", module_candidates, file_candidates, sys.argv[1:]))
