#!/usr/bin/env python3
import sys

from wrapper_base import find_repo_root, wrapper_main

if __name__ == "__main__":
    root = find_repo_root()
    module_candidates = [("-m", ["cli_ablate"]), ("-m", ["spectramind.cli_ablate"])]
    file_candidates = [
        root / "cli_ablate.py",
        root / "src" / "spectramind" / "cli_ablate.py",
        root / "auto_ablate_v50.py",
        root / "src" / "spectramind" / "auto_ablate_v50.py",
    ]
    sys.exit(wrapper_main("ablate_v50", module_candidates, file_candidates, sys.argv[1:]))
