{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SymbolicWeightsOverrides",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "profile": { "type": "string" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "description": { "type": "string" }
      },
      "required": ["profile", "version"]
    },
    "weights": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      },
      "description": "Map of symbolic feature/key -> numeric weight"
    },
    "constraints": {
      "type": "object",
      "properties": {
        "min": { "type": "number" },
        "max": { "type": "number" },
        "clip": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "notes": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "required": ["meta", "weights"],
  "additionalProperties": false
}
